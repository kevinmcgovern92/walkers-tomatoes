<div class="container">


<div class="center2">
	<h1>Login</h1>
</div>

<%= form_tag '/login' do %>

    <div class="form-group">
  		Email: <%= text_field_tag :email %>
	</div>

	<div class="form-group">
  		Password: <%= password_field_tag :password %>
	</div>

	<div class="form-group">
  		<%= submit_tag "Submit" %>
	</div>

<% end %>

</div>



