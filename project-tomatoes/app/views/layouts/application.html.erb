<!DOCTYPE html>
<html>
  <head>
    <title>ProjectTomatoes</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/application.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  <style>
    /* Remove the navbar's default margin-bottom and rounded borders */
    .navbar {
      margin-bottom: 0;
      border-radius: 0;
    }

    .container {
      margin: auto;
    height: 50%;
    }

    /* Set height of the grid so .sidenav can be 100% (adjust as needed) */
    .row.content {height: 550px}

    /* Set gray background color and 100% height */
    .sidenav {
      padding-top: 20px;
      background-color: #cccccc;
      height: 100%;
    }

    .jumbotron {
      background-color: #cccccc;
    }

    .navbar-middle {
    margin-left:auto;
    margin-right:auto;
    max-width: 300px;
    background: gray;
    padding: 5px 5px 5px 5px;
    font: 16px Georgia, "Times New Roman", Times, serif;
    color: black;
    /*text-shadow: 1px 1px 1px #FFF;*/
    border:1px solid #E4E4E4;
     }

    form {
      width:50%;
      margin: 0 auto;

    }

    .center {
    margin: auto;
    width: 50%;
    border: 3px solid gray;
    padding: 10px;
    padding-top: 20px;
}

/*centers signup/login forms*/
    .center2 {
    margin: auto;
    width: 50%;
    padding: 10px;
    padding-top: 20px;
}


   /* .navbar-middle {
  width: 100%;
  top: 50%;
  margin-left: 17px;
  margin-top: 17px;

     }*/
    
    /* Set black background color, white text and some padding */
/*    footer {
      background-color: #555;
      color: white;
      padding: 15px;
    }*/

    /* On small screens, set height to 'auto' for sidenav and grid */
    @media screen and (max-width: 767px) {
      .sidenav {
        height: auto;
        padding: 10px;
      }
      .row.content {height:auto;}
    }
  </style>

  </head>

  <body>

  <% if current_user %>


<nav class="navbar navbar-inverse navbar-top">

    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
           <!--  <span class="icon-bar"></span>
            <span class="icon-bar"></span> -->
        </button>

        <a class="navbar-brand" href="/">HOME</a>

        <!-- <h3>Search for a movie</h3> -->

      </div>
    <div class="center">
      <div class="navbar-middle">
        <%= form_tag("/search", method: :get) do %>
          <%= text_field_tag :query, nil, placeholder: "Search for a movie.. " %>
          <%= submit_tag "Search", :name => nil %>
        <% end %>
    </div>
      </div>

      <div id="navbar" class="navbar-collapse collapse">

        <ul class="nav navbar-nav navbar-right">
          <li><a href="/users/<%= current_user.id %>"><span class="glyphicon glyphicon-user"></span> <%= current_user.name %> </a></li>
          <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span>   Logout</a></li>
        </ul>


      </div><!--/.navbar-collapse -->
    </div>
</nav>


  <% else %>

<nav class="navbar navbar-inverse navbar-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
          <!--   <span class="icon-bar"></span>
            <span class="icon-bar"></span> -->
          </button>
          <a class="navbar-brand" href="/">HOME</a>

        </div>

    <div class="center">
      <div class="navbar-middle">
        <ul><%= form_tag("/search", method: :get) do %>
          <%= text_field_tag :query, nil, placeholder: "Search for a movie.. " %>
          <%= submit_tag "Search", :name => nil %>
        <% end %></ul>
      </div>
    </div>

        <div id="navbar" class="navbar-collapse collapse">
    <ul class="nav navbar-nav navbar-right">
      <li><a href="/signup"><span class="glyphicon glyphicon-user"></span> Sign Up   </a></li>
      <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
    </ul>



        </div><!--/.navbar-collapse -->
      </div>
    </nav>

<% end %>


    <%= yield %>
  </body>
</html>
